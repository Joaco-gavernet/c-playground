#include <stdio.h>
#include <stdlib.h>
#define forn(i,n) for(i=0; i<n; i++)
#define dim 5

void scaleMatrix (int structure[dim][dim], int scalar, int m, int n) {
    int i,j;
    forn(i,m) {
        forn(j,n) structure[i][j] *= scalar;
    }
}

void printMatrix (int structure[dim][dim], int m, int n) {
    int i,j;
    forn(i,m) {
        forn(j, n) printf("%3d ", structure[i][j]);
        printf("\n");
    }
}

int main()
{
    int i, j;
    int matrix[dim][dim];

    forn(i,dim) {
        forn(j, dim) {
            matrix[i][j] = 1 + rand() % 100;
            printf("%3d ", matrix[i][j]);
        }
        printf("\n");
    }
    printf("//////////////\n");

    scaleMatrix(matrix, 2, dim, dim);
    printMatrix(matrix, dim, dim);

    printf("done \n");
}
